<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:nl.yogh.gwt.wui.widget"
  xmlns:p="urn:import:nl.yogh.aerius.wui.widget" xmlns:c="urn:import:nl.yogh.aerius.wui.builder.component">
  <ui:style type="nl.yogh.gwt.wui.ThemeSwitcher.CustomStyle">
    .button {
    outline: none;
    transition: all 0.3s ease-out;
    cursor: pointer;
    width: 16px;
    height: 32px;
    }
    .switchToDark {
    background-color: #666;
    border: none;
    border-bottom-right-radius: 64px;
    border-top-right-radius: 64px;
    }
    .switchToDark:hover {
    background-color: #333;
    }
    .switchToLight {
    background-color: #aaa;
    border: none;
    border-bottom-left-radius: 64px;
    border-top-left-radius: 64px;
    }
    .switchToLight:hover {
    background-color: #ddd;
    }
  </ui:style>
  <g:SimplePanel>
    <g:FocusPanel styleName="{style.button} {style.switchToLight}" ui:field="themeButton" />
  </g:SimplePanel>
</ui:UiBinder>
