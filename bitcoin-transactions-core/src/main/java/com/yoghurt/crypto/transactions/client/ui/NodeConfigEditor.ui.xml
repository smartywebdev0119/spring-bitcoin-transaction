<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:w="urn:import:com.yoghurt.crypto.transactions.client.widget"
  xmlns:m="urn:import:gwt.material.design.client.ui">
  <ui:with field="i18n" type="com.yoghurt.crypto.transactions.client.i18n.ApplicationMessages" />
  <ui:with field="res" type="com.yoghurt.crypto.transactions.client.resources.R" />
  <ui:style>
  .textBox {
  	margin-bottom: 15px;
  }
  </ui:style>
  <g:FlowPanel>
    <m:MaterialTextBox placeholder="{i18n.configNodeHost}" ui:field="hostField" />
    <m:MaterialTextBox placeholder="{i18n.configNodePort}" ui:field="portField" />
    <m:MaterialTextBox placeholder="{i18n.configNodeRpcUser}" ui:field="rpcUserField" />
    <m:MaterialTextBox placeholder="{i18n.configNodeRpcPass}" ui:field="rpcPassField" />
  </g:FlowPanel>
</ui:UiBinder>