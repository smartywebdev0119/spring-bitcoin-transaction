<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:w="urn:import:com.yoghurt.crypto.widget" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:with field="res" type="com.yoghurt.crypto.transactions.client.resources.R" />
  <ui:style>
    .content {
    border-radius: 5px;
    background-color: #fff;
    box-shadow: 0px 0px 5px #fff;
    }
    .contentHeading {
    font-size: 31px;
    height: 37px;
    font-weight: bold;
    }
  </ui:style>
  <g:FlowPanel styleName="{style.content}">
    <w:HeadingWidget n="2" />
    <g:Label styleName="{res.css.link}" text="First transaction ever on the blockchain" ui:field="firstEver" />
    <g:Label styleName="{res.css.link}" text="Simple pay-to-pubkey-hash" ui:field="p2pkh" />
  </g:FlowPanel>
</ui:UiBinder>