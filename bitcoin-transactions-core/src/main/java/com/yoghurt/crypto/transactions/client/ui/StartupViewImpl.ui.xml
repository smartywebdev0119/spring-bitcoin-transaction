<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
  .content {
  	border-radius: 5px;
  	padding: 20px;
  	margin-top: 50px;
  	background-color: #fff;
  	box-shadow: 0px 0px 5px #fff;
  }
  .contentHeading {
	font-size: 31px;
	height: 37px;
	font-weight: bold;
  }
  .test:hover {
	text-decoration: underline;
	color: rgb(250, 143, 8);
	cursor: pointer;
  }
  </ui:style>
  <g:FlowPanel styleName="{style.content}">
    <g:Label styleName="{style.contentHeading}" text="Meh." />
    <g:Label styleName="{style.test}" text="Test transaction hex" ui:field="test" />
  </g:FlowPanel>
</ui:UiBinder>