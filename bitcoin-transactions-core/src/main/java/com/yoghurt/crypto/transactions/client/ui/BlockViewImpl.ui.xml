<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:com.yoghurt.crypto.transactions.client.widget">
  <ui:with field="i18n" type="com.yoghurt.crypto.transactions.client.i18n.ApplicationMessages" />
  <ui:style>
  .contentHeading {
  	font-size: 31px;
  	height: 37px;
  	font-weight: bold;
  }
  .hexViewer {
  	width: 780px;
  }
  </ui:style>
  <g:FlowPanel>
    <g:Label styleName="{style.contentHeading}" text="Block Breakdown" />
    <g:HTML>
      <h2><ui:text from="{i18n.blockPlaceTitleInformation}" /></h2>
    </g:HTML>
    <w:LabelledWidget label="Block hash:">
      <w:ValueViewer ui:field="blockHashViewer" />
    </w:LabelledWidget>
    <g:Label text="{i18n.blockPlaceBlockchainExistenceLoading}" ui:field="loadPlaceHolder" />
    <g:Label text="{i18n.blockPlaceBlockchainExistenceNotFound}" visible="false" ui:field="notFoundLabel" />
    <g:FlowPanel ui:field="extraInformationContainer" visible="false">
      <w:LabelledWidget label="{i18n.blockHeight}">
        <w:ValueViewer ui:field="heightViewer" />
      </w:LabelledWidget>
      <w:LabelledWidget label="{i18n.blockDepth}">
        <w:ValueViewer ui:field="numConfirmationsViewer" />
      </w:LabelledWidget>
      <w:LabelledWidget label="{i18n.blockNumTransactions}">
        <w:ValueViewer ui:field="numTransactionsViewer" />
      </w:LabelledWidget>
      <w:LabelledWidget label="{i18n.blockNextBlock}">
        <w:ValueViewer ui:field="nextBlockViewer" />
      </w:LabelledWidget>
      <w:LabelledWidget label="{i18n.blockSize}">
        <w:ValueViewer ui:field="sizeViewer" />
      </w:LabelledWidget>
    </g:FlowPanel>
    <g:HTML>
      <h2><ui:text from="{i18n.blockPlaceTitleBlockHeaders}" /></h2>
    </g:HTML>
    <w:LabelledWidget label="{i18n.blockVersion}">
      <w:ValueViewer ui:field="versionViewer" />
    </w:LabelledWidget>
    <w:LabelledWidget label="{i18n.blockPreviousBlock}">
      <w:ValueViewer ui:field="previousBlockHashViewer" />
    </w:LabelledWidget>
    <w:LabelledWidget label="{i18n.blockMerkleRoot}">
      <w:ValueViewer ui:field="merkleRootViewer" />
    </w:LabelledWidget>
    <w:LabelledWidget label="{i18n.blockTime}">
      <w:ValueViewer ui:field="timestampViewer" />
    </w:LabelledWidget>
    <w:LabelledWidget label="{i18n.blockBits}">
      <w:ValueViewer ui:field="bitsViewer" />
    </w:LabelledWidget>
    <w:LabelledWidget label="{i18n.blockNonce}">
      <w:ValueViewer ui:field="nonceViewer" />
    </w:LabelledWidget>
    <g:HTML>
      <h2><ui:text from="{i18n.blockPlaceTitleRawHex}" /></h2>
    </g:HTML>
    <w:BlockHexViewer ui:field="blockHexViewer" styleName="{style.hexViewer}" />
  </g:FlowPanel>
</ui:UiBinder>