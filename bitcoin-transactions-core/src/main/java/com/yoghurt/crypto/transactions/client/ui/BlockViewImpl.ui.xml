<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:com.yoghurt.crypto.transactions.client.widget">
  <ui:with field="i18n" type="com.yoghurt.crypto.transactions.client.i18n.ApplicationMessages" />
  <ui:style>
  .contentHeading {
  	font-size: 31px;
  	height: 37px;
  	font-weight: bold;
  }
  .hexViewer {
  	width: 780px;
  }
  </ui:style>
  <g:FlowPanel>
    <g:Label styleName="{style.contentHeading}" text="{i18n.blockPlaceTitle}" />
    <g:HTML>
      <h2><ui:text from="{i18n.blockPlaceTitleInformation}" /></h2>
    </g:HTML>
    <w:HashHexViewer ui:field="blockHashViewer" />
    <g:HTML>
      <h2><ui:text from="{i18n.blockPlaceTitleExtraInformation}" /></h2>
    </g:HTML>
    <g:Label text="{i18n.blockPlaceBlockchainExistenceNotFound}" visible="false" ui:field="notFoundLabel" />
    <g:FlowPanel ui:field="extraInformationContainer" visible="false">
      <w:LabelledWidget label="{i18n.blockHeight}">
        <w:ValueViewer ui:field="heightViewer" animate="true" />
      </w:LabelledWidget>
      <w:LabelledWidget label="{i18n.blockDepth}">
        <w:ValueViewer ui:field="numConfirmationsViewer" animate="true" />
      </w:LabelledWidget>
      <w:LabelledWidget label="{i18n.blockNumTransactions}">
        <w:ValueViewer ui:field="numTransactionsViewer" animate="true" />
      </w:LabelledWidget>
      <w:LabelledWidget label="{i18n.blockNextBlock}">
        <w:ValueViewer ui:field="nextBlockViewer" animate="true" />
      </w:LabelledWidget>
      <w:LabelledWidget label="{i18n.blockSize}">
        <w:ValueViewer ui:field="sizeViewer" animate="true" />
      </w:LabelledWidget>
    </g:FlowPanel>
    <g:HTML>
      <h2><ui:text from="{i18n.blockPlaceTitleBlockHeaders}" /></h2>
    </g:HTML>
    <w:LabelledWidget label="{i18n.blockVersion}">
      <w:ValueViewer ui:field="versionViewer" animate="true" />
    </w:LabelledWidget>
    <w:LabelledWidget label="{i18n.blockPreviousBlock}">
      <w:ValueViewer ui:field="previousBlockHashViewer" animate="true" />
    </w:LabelledWidget>
    <w:LabelledWidget label="{i18n.blockMerkleRoot}">
      <w:ValueViewer ui:field="merkleRootViewer" animate="true" />
    </w:LabelledWidget>
    <w:LabelledWidget label="{i18n.blockTime}">
      <w:ValueViewer ui:field="timestampViewer" animate="true" />
    </w:LabelledWidget>
    <w:LabelledWidget label="{i18n.blockBits}">
      <w:ValueViewer ui:field="bitsViewer" animate="true" />
    </w:LabelledWidget>
    <w:LabelledWidget label="{i18n.blockNonce}">
      <w:ValueViewer ui:field="nonceViewer" animate="true" />
    </w:LabelledWidget>
    <g:HTML>
      <h2><ui:text from="{i18n.blockPlaceTitleRawBlockHex}" /></h2>
    </g:HTML>
    <w:BlockHexViewer ui:field="blockHexViewer" styleName="{style.hexViewer}" />
    <g:HTML>
      <h2><ui:text from="{i18n.blockPlaceTitleRawCoinbaseHex}" /></h2>
    </g:HTML>
    <w:TransactionHexViewer ui:field="coinbaseHexViewer" styleName="{style.hexViewer}" />
  </g:FlowPanel>
</ui:UiBinder>