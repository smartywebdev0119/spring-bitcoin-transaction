<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:com.yoghurt.crypto.transactions.client.widget">
  <ui:style>
  .content {
  	border-radius: 5px;
  	padding: 20px;
  	margin-top: 50px;
  	background-color: #fff;
  	box-shadow: 0px 0px 5px #fff;
  }
  .contentHeading {
  	font-size: 31px;
  	height: 37px;
  	font-weight: bold;
  }
  .label {
  	margin: 10px 10px 10px 0px;
  	display: inline-block;
  	width: 85px;
  }
  .widg {
  	display: inline-block;
  }
  .hexViewer {
  	width: 780px;
  }
  </ui:style>
  <g:FlowPanel styleName="{style.content}">
    <g:Label styleName="{style.contentHeading}" text="Block Breakdown" />
    <g:HTML>
      <h2>Block information</h2>
    </g:HTML>
    <w:LabelledWidget label="Block hash:" labelStyleName="{style.label}">
      <w:ValueViewer ui:field="blockHashViewer" styleName="{style.widg}" />
    </w:LabelledWidget>
    <g:HTML>
      <h2>Block headers</h2>
    </g:HTML>
    <w:LabelledWidget label="Version:" labelStyleName="{style.label}">
      <w:ValueViewer ui:field="versionViewer" styleName="{style.widg}" />
    </w:LabelledWidget>
    <w:LabelledWidget label="Prev block:" labelStyleName="{style.label}">
      <w:ValueViewer ui:field="previousBlockHashViewer" styleName="{style.widg}" />
    </w:LabelledWidget>
    <w:LabelledWidget label="Merkle root:" labelStyleName="{style.label}">
      <w:ValueViewer ui:field="merkleRootViewer" styleName="{style.widg}" />
    </w:LabelledWidget>
    <w:LabelledWidget label="Timestamp:" labelStyleName="{style.label}">
      <w:ValueViewer ui:field="timestampViewer" styleName="{style.widg}" />
    </w:LabelledWidget>
    <w:LabelledWidget label="Bits:" labelStyleName="{style.label}">
      <w:HashViewer ui:field="bitsViewer" styleName="{style.widg}" />
    </w:LabelledWidget>
    <w:LabelledWidget label="Nonce:" labelStyleName="{style.label}">
      <w:ValueViewer ui:field="nonceViewer" styleName="{style.widg}" />
    </w:LabelledWidget>
    <g:HTML>
      <h2>Raw block in hex</h2>
    </g:HTML>
    <w:BlockHexViewer ui:field="blockHexViewer" styleName="{style.hexViewer}" />
  </g:FlowPanel>
</ui:UiBinder>