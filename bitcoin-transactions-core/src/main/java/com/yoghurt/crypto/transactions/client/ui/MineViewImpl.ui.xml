<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:com.yoghurt.crypto.transactions.client.widget">
  <ui:with field="i18n" type="com.yoghurt.crypto.transactions.client.i18n.ApplicationMessages" />
  <ui:with field="res" type="com.yoghurt.crypto.transactions.client.resources.R" />
  <ui:style>
    .contentHeading {
    font-size: 31px;
    height: 37px;
    font-weight: bold;
    }
    .hexViewer {
    width: 780px;
    flex-wrap: wrap;
    }
    .button {
    width: 120px;
    }
  </ui:style>
  <g:FlowPanel>
    <g:Label styleName="{style.contentHeading}" text="{i18n.minePlaceTitleMiningSimulator}" />
    <w:HeadingWidget n="2" text="{i18n.minePlaceTitleBlockHeaders}" />
    <w:LabelledWidget label="{i18n.blockVersion}">
      <w:ValueViewer ui:field="versionViewer" color="{res.color.blockVersion}" />
    </w:LabelledWidget>
    <w:LabelledWidget label="{i18n.blockPreviousBlock}">
      <w:ValueViewer ui:field="previousBlockHashViewer" color="{res.color.blockHash}" />
    </w:LabelledWidget>
    <w:LabelledWidget label="{i18n.blockMerkleRoot}">
      <w:ValueViewer ui:field="merkleRootViewer" color="{res.color.blockMerkleRoot}" />
    </w:LabelledWidget>
    <w:LabelledWidget label="{i18n.blockTime}">
      <w:ValueViewer ui:field="timestampViewer" color="{res.color.blockTime}" />
    </w:LabelledWidget>
    <w:LabelledWidget label="{i18n.blockBits}">
      <w:ValueViewer ui:field="bitsViewer" color="{res.color.blockBits}" />
    </w:LabelledWidget>
    <w:LabelledWidget label="{i18n.blockNonce}">
      <w:ValueViewer ui:field="nonceViewer" color="{res.color.blockNonce}" />
    </w:LabelledWidget>
    <w:HeadingWidget n="2" text="Controls" />
    <w:HeadingWidget n="3" text="Playback" />
    <g:FlowPanel>
      <g:Button styleName="{style.button}" ui:field="continueButton" text="Start" />
      <g:Button styleName="{style.button}" ui:field="cancelButton" text="Pause" />
      <g:Button styleName="{style.button}" ui:field="singleCycleButton" text="Run once" />
    </g:FlowPanel>
    <w:HeadingWidget n="2" text="{i18n.minePlaceTitleModifyHeaders}" />
    <g:FlowPanel>
      <g:Button styleName="{style.button}" ui:field="nonceDecrementButton" text="nonce --" />
      <g:Button styleName="{style.button}" ui:field="nonceIncrementButton" text="nonce ++" />
      <g:Button styleName="{style.button}" ui:field="extraNonceDecrementButton" text="extraNonce --" />
      <g:Button styleName="{style.button}" ui:field="extraNonceIncrementButton" text="extraNonce ++" />
      <g:Button styleName="{style.button}" ui:field="timeSynchronizeButton" text="Synchronize time" />
    </g:FlowPanel>
    <w:HeadingWidget n="2" text="{i18n.minePlaceTitleMineHeaders}" />
    <w:BlockHexViewer ui:field="blockHexViewer" styleName="{style.hexViewer} {res.css.flex}" />
    <w:HeadingWidget n="2" text="{i18n.minePlaceTitleCoinbase}" />
    <w:TransactionHexViewer ui:field="coinbaseHexViewer" styleName="{style.hexViewer} {res.css.flex}" />
    <w:HeadingWidget n="2" text="{i18n.minePlaceTitleBlockHash}" />
    <w:HashHexViewer ui:field="blockHashViewer" styleName="{style.hexViewer} {res.css.flex}" color="{res.color.blockHash}" />
  </g:FlowPanel>
</ui:UiBinder>