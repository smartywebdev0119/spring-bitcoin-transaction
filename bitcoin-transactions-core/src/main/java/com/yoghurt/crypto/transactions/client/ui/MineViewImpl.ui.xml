<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:com.yoghurt.crypto.transactions.client.widget">
  <ui:with field="i18n" type="com.yoghurt.crypto.transactions.client.i18n.ApplicationMessages" />
  <ui:style>
  .contentHeading {
  	font-size: 31px;
  	height: 37px;
  	font-weight: bold;
  }
  .hexViewer {
  	width: 780px;
  }
  .inline {
  	display: inline-block;
  }
  </ui:style>
  <g:FlowPanel>
    <g:Label styleName="{style.contentHeading}" text="Mining simulator" />
    <g:HTML>
      <h2>Controls</h2>
      <h3>Playback</h3>
    </g:HTML>
    <g:FlowPanel>
      <g:Button ui:field="cancelButton" text="Pause" />
      <g:Button ui:field="continueButton" text="Continue" />
      <g:Button ui:field="singleCycleButton" text="Run once" />
    </g:FlowPanel>
    <g:HTML>
      <h3><ui:text from="{i18n.minePlaceTitleModifyHeaders}" /></h3>
    </g:HTML>
    <g:FlowPanel>
      <g:Button ui:field="nonceIncrementButton" text="Increment nonce" />
      <g:Button ui:field="extraNonceIncrementButton" text="Increment extraNonce" />
      <g:Button ui:field="timeSynchronizeButton" text="Synchronize time" />
      <g:Button ui:field="latestBlockButton" text="Get latest block" />
    </g:FlowPanel>
    <g:HTML>
      <h2><ui:text from="{i18n.minePlaceTitleMineHeaders}" /></h2>
    </g:HTML>
    <w:BlockHexViewer ui:field="blockHexViewer" styleName="{style.hexViewer}" />
    <g:HTML>
      <h2><ui:text from="{i18n.minePlaceTitleBlockHash}" /></h2>
    </g:HTML>
    <w:HashHexViewer ui:field="blockHashViewer" styleName="{style.hexViewer}" />
    <g:HTML>
      <h2><ui:text from="{i18n.minePlaceTitleBlockHeaders}" /></h2>
    </g:HTML>
    <w:LabelledWidget label="{i18n.blockVersion}">
      <w:ValueViewer ui:field="versionViewer" />
    </w:LabelledWidget>
    <w:LabelledWidget label="{i18n.blockPreviousBlock}">
      <w:ValueViewer ui:field="previousBlockHashViewer" />
    </w:LabelledWidget>
    <w:LabelledWidget label="{i18n.blockMerkleRoot}">
      <w:ValueViewer ui:field="merkleRootViewer" />
    </w:LabelledWidget>
    <w:LabelledWidget label="{i18n.blockTime}">
      <w:ValueViewer ui:field="timestampViewer" />
    </w:LabelledWidget>
    <w:LabelledWidget label="{i18n.blockBits}">
      <w:ValueViewer ui:field="bitsViewer" />
    </w:LabelledWidget>
    <w:LabelledWidget label="{i18n.blockNonce}">
      <w:ValueViewer ui:field="nonceViewer" />
    </w:LabelledWidget>
  </g:FlowPanel>
</ui:UiBinder>