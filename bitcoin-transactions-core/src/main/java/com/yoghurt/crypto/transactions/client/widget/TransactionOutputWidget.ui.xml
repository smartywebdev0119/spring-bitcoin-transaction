<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
xmlns:w="urn:import:com.yoghurt.crypto.transactions.client.widget"
xmlns:ws="urn:import:com.yoghurt.crypto.transactions.client.widget.script">
  <ui:style>
  .label {
  	margin: 10px 10px 10px 0px;
  	display: inline-block;
  	width: 85px;
  }
  .labelledValue {
  	display: inline-block;
  	font-weight: bold;
  	word-wrap: break-word;
  }
  .widg {
	display: inline-block;
  }
  </ui:style>
  <g:FlowPanel>
    <w:LabelledWidget label="Amount:" labelStyleName="{style.label}">
      <w:ValueViewer ui:field="amountViewer" styleName="{style.widg}" />
    </w:LabelledWidget>
    <w:LabelledWidget label="PubKeySig:" labelStyleName="{style.label}">
      <ws:ScriptViewer ui:field="signatureScriptViewer" styleName="{style.widg}" />
    </w:LabelledWidget>
  </g:FlowPanel>
</ui:UiBinder>