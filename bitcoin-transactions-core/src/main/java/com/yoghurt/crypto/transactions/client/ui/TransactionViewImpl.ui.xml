<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:com.yoghurt.crypto.transactions.client.widget">
  <ui:style>
  .contentHeading {
  	font-size: 31px;
  	height: 37px;
  	font-weight: bold;
  }
  .label {
  	margin: 10px 10px 10px 0px;
  	display: inline-block;
  	width: 85px;
  }
  .widg {
  	display: inline-block;
  }
  .hexViewer {
  	width: 780px;
  }
  </ui:style>
  <g:FlowPanel>
    <g:Label styleName="{style.contentHeading}" text="Transaction Breakdown" />
    <g:HTML>
      <h2>Transaction information</h2>
    </g:HTML>
    <w:LabelledWidget label="Transaction id:">
      <w:ValueViewer ui:field="txIdViewer" />
    </w:LabelledWidget>
    <g:Label text="Checking existence in the blockchain ..." ui:field="loadPlaceHolder" />
    <g:Label text="This transaction does not exist in the blockchain and could not be found in the unconfirmed transaction pool." visible="false"
      ui:field="notFoundLabel" />
    <g:FlowPanel ui:field="extraInformationContainer" visible="false">
      <w:LabelledWidget label="State:">
        <w:ValueViewer ui:field="txStateViewer" />
      </w:LabelledWidget>
      <w:LabelledWidget label="Block height:">
        <w:BlockViewer ui:field="txBlockViewer" />
      </w:LabelledWidget>
      <w:LabelledWidget label="Confirmations:">
        <w:ValueViewer ui:field="txConfirmationsViewer" />
      </w:LabelledWidget>
      <w:LabelledWidget label="Time">
        <w:ValueViewer ui:field="txTimeViewer" />
      </w:LabelledWidget>
    </g:FlowPanel>
    <g:HTML>
      <h2>Transaction inputs</h2>
    </g:HTML>
    <g:FlowPanel ui:field="inputContainer" />
    <g:HTML>
      <h2>Transaction outputs</h2>
    </g:HTML>
    <g:FlowPanel ui:field="outputContainer" />
    <g:HTML>
      <h2>Miscellaneous information:</h2>
    </g:HTML>
    <w:LabelledWidget label="Format version:">
      <w:ValueViewer ui:field="txVersionViewer" />
    </w:LabelledWidget>
    <w:LabelledWidget label="Lock time:">
      <w:ValueViewer ui:field="txLockTimeViewer" />
    </w:LabelledWidget>
    <g:HTML>
      <h2>Raw transaction in hex</h2>
    </g:HTML>
    <w:TransactionHexViewer ui:field="txHexViewer" styleName="{style.hexViewer}" />
  </g:FlowPanel>
</ui:UiBinder>