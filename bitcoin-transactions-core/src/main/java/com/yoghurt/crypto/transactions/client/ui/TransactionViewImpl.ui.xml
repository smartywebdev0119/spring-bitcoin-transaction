<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:com.yoghurt.crypto.transactions.client.widget">
  <ui:with field="i18n" type="com.yoghurt.crypto.transactions.client.i18n.ApplicationMessages" />
  <ui:style>
  .contentHeading {
  	font-size: 31px;
  	height: 37px;
  	font-weight: bold;
  }
  .label {
  	margin: 10px 10px 10px 0px;
  	display: inline-block;
  	width: 85px;
  }
  .widg {
  	display: inline-block;
  }
  .hexViewer {
  	width: 780px;
  }
  .parseError {
	background-color: #f00;
	color: white;
	border-radius: 8px;
	margin-bottom: 20px;
	padding: 10px 15px 20px 15px;;
  }
  </ui:style>
  <g:FlowPanel>
    <g:FlowPanel ui:field="errorView" visible="false" styleName="{style.parseError}">
      <g:HTML>
        <h2><ui:text from="{i18n.transactionPlaceTitleError}" /></h2>
      </g:HTML>
      <g:Label ui:field="transactionFullBlownErrorLabel" text="{i18n.transactionPlaceParseError}" />
    </g:FlowPanel>
    <g:Label styleName="{style.contentHeading}" text="{i18n.transactionPlaceTitle}" />
    <g:HTML>
      <h2><ui:text from="{i18n.transactionPlaceTitleInformation}" /></h2>
    </g:HTML>
    <w:HashHexViewer ui:field="txIdViewer" />
    <g:FlowPanel ui:field="fullTransactionInformation">
      <g:HTML>
        <h2><ui:text from="{i18n.transactionPlaceTitleExtraInformation}" /></h2>
      </g:HTML>
      <g:Label text="{i18n.transactionPlaceBlockchainExistenceNotFound}" visible="false" ui:field="notFoundLabel" />
      <g:FlowPanel ui:field="extraInformationContainer" visible="false">
        <w:LabelledWidget label="{i18n.transactionState}">
          <w:ValueViewer ui:field="txStateViewer" />
        </w:LabelledWidget>
        <w:LabelledWidget ui:field="txBlockContainer" label="{i18n.blockHash}">
          <w:BlockViewer ui:field="txBlockViewer" />
        </w:LabelledWidget>
        <w:LabelledWidget ui:field="txConfirmationsContainer" label="{i18n.blockConfirmations}">
          <w:ValueViewer ui:field="txConfirmationsViewer" />
        </w:LabelledWidget>
        <w:LabelledWidget ui:field="txTimeContainer" label="{i18n.transactionTime}">
          <w:ValueViewer ui:field="txTimeViewer" />
        </w:LabelledWidget>
      </g:FlowPanel>
      <g:HTML>
        <h2><ui:text from="{i18n.transactionPlaceTitleTransactionInputs}" /></h2>
      </g:HTML>
      <g:FlowPanel ui:field="inputContainer" />
      <g:HTML>
        <h2><ui:text from="{i18n.transactionPlaceTitleTransactionOutputs}" /></h2>
      </g:HTML>
      <g:FlowPanel ui:field="outputContainer" />
      <g:HTML>
        <h2><ui:text from="{i18n.transactionPlaceTitleMiscellaneousInformation}" /></h2>
      </g:HTML>
      <w:LabelledWidget label="{i18n.transactionVersion}">
        <w:ValueViewer ui:field="txVersionViewer" />
      </w:LabelledWidget>
      <w:LabelledWidget label="{i18n.transactionLockTime}">
        <w:ValueViewer ui:field="txLockTimeViewer" />
      </w:LabelledWidget>
      <g:HTML>
        <h2><ui:text from="{i18n.transactionPlaceTitleRawHex}" /></h2>
      </g:HTML>
      <w:TransactionHexViewer ui:field="txHexViewer" styleName="{style.hexViewer}" />
    </g:FlowPanel>
  </g:FlowPanel>
</ui:UiBinder>